public class VariablesExample{
    public static void main(String[] args) {
        /*
        Declaring a variable: data-type variable-name;
        Initialization: variable-name = value;
         */

        int a;
        a = 50;
        System.out.println("a"); //prints string "a"
        System.out.println(a); //prints value of variable 'a'
        int e = 'a';
        System.out.println('a'); //prints character 'a'
        System.out.println(e); //prints ASCII value of 'a'
        /*
        Declare and initialize: data-type variable-name = value;
         */
        int b = 100;

        float c = 3.14f;
        double d = 3.14;
    }
}
